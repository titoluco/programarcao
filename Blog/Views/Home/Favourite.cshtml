<div class="text-center" id="blog-title2">

    @*<div class="bloglist" id="blog-list">
        </div>*@

    <script id="blog-card" type="text/template">
        <div class="card wow fadeInDown animated col-md-4" data-wow-delay="0.2s">
            <a id="LinkFavorito" onclick="pageEvents.addFavourite('{{PostId}}');"><i id="fav{{PostId}}" class="fa fa-star favorito"></i></a>
            <div class="blog-item">
                <a onclick="pageEvents.loadBlogPost('{{Link}}');">
                    <img src="/images2/blog/{{PostId}}.png" width="350" height="230" alt="">
                </a>
                <div class="blog-caption">
                    <div class="title">
                        <div class="meta">
                            <i class="pe-7s-pin"></i>
                        </div>
                        <div id="postTitle">
                            <h3>{{PostId}} - {{Title}}</h3>
                        </div>
                    </div>
                    <div class="caption">
                        <div class="date-meta">
                            <div class="date-box">
                                <i class="pe-7s-note2"></i>
                            </div>
                            <div class="date-box">
                                <p>JAN</p>
                                <span>05</span>
                            </div>
                        </div>
                        <p>{{ShortDescription}}</p>
                    </div>
                </div>
            </div>
        </div>
    </script>
</div>

